{
  "name": "Raccoon Aegis",
  "description": "Raccoon Protects You From Cusses",
  "version": "1.0",
  "browser_action": {
    "default_icon": "raccoon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content_script.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ]
}